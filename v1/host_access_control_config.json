{
    "id": "host_access_control_config",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "access_entries": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "user": {"type": "string"},
                    "group": {"type": "string"},
                    "address": {"type": "string"},
                    "mask": {"type": "string"}
                },
                "required": ["user","group","address","mask"]
            }
        }
    },
    "required": ["access_entries"]
}
