{
    "id": "server_status",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "hostname": {"type": "string"},
        "irods_server_pid": {"type": "integer"},
        "re_server_pid": {"type": "integer"},
        "xmsg_server_pid": {"type": "integer"},
        "status": {"type": "string"},
        "agents": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "agent_pid": {"type": "integer"},
                    "age": {"type": "string", "pattern": "^[0-9]+:[0-5][0-9]:[0-5][0-9]$"}
                },
                "required": ["agent_pid","age"]
            }
        }
    },
    "required": ["hostname","irods_server_pid","re_server_pid","xmsg_server_pid","status","agents"]
}

