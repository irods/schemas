{
    "id": "server_config",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "icat_host": {"type": "string"},
        "re_rulebase_set": {
            "type": "array",
            "items": {
                "$ref": "filename"
            }
        },
        "re_function_name_mapping_set": {
            "type": "array",
            "items": {
                "$ref": "filename"
            }
        },
        "re_data_variable_mapping_set": {
            "type": "array",
            "items": {
                "$ref": "filename"
            }
        },
        "kerberos_name": {"type": "string"},
        "pam_password_length": {"type": "integer"},
        "pam_no_extend": {"enum": ["true","false"]},
        "pam_password_min_time": {"type": "integer"},
        "pam_password_max_time": {"type": "integer"},
        "run_server_as_root": {"enum": ["true","false"]},
        "default_dir_mode": {"type": "string"},
        "default_file_mode": {"type": "string"},
        "default_hash_scheme": {"type": "string"},
        "zone_id": {"type": "string"},
        "negotiation_key": {"type": "string", "minLength": 32, "maxLength": 32},
        "match_hash_policy": {"type": "string"},
        "environment_variables": {
            "type": "object",
            "additionalProperties": {"type": "string"}
        },
        "federation": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "zone_name": {"type": "string"},
                    "zone_id": {"type": "string"},
                    "negotiation_key": {"type": "string", "minLength": 32, "maxLength": 32}
                },
                "required": ["zone_name","zone_id","negotiation_key"]
            }
        }
    },
    "required": ["icat_host","re_rulebase_set","re_function_name_mapping_set","re_data_variable_mapping_set","run_server_as_root","default_dir_mode","default_file_mode","default_hash_scheme","zone_id","negotiation_key","match_hash_policy","environment_variables","federation"]
}